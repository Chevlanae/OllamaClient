<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="OllamaClient.Views.Windows.CreateModelWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OllamaClient.Views.Windows"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Create Model">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Background="{ThemeResource SolidBackgroundFillColorTertiary}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <SelectorBar 
            Grid.Row="0" 
            x:Name="NavigationSelectorBar" 
            HorizontalAlignment="Center" 
            SelectionChanged="NavigationSelectorBar_SelectionChanged">
            <SelectorBarItem x:Name="FromSelectorBarItem" Text="From" />
            <SelectorBarItem x:Name="TemplateSelectorBarItem" Text="Template" />
            <SelectorBarItem x:Name="ParametersSelectorBarItem" Text="Parameters" />
            <SelectorBarItem x:Name="SystemSelectorBarItem" Text="System" />
        </SelectorBar>
        <Frame Grid.Row="1" x:Name="ContentFrame" IsNavigationStackEnabled="False" />
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10">
            <Button x:Name="CreateButton" Content="Create" Click="CreateButton_Click" Margin="0,0,10,0" />
            <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
