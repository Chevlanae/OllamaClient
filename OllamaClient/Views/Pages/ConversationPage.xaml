<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="OllamaClient.Views.Pages.ConversationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource SolidBackgroundFillColorTertiary}">
    <Grid MinWidth="200">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="20" MaxWidth="1000">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="10,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="100"/>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <ComboBox x:Name="ModelsComboBox" Grid.Column="0" Margin="0,0,20,0" ToolTipService.ToolTip="Selected model" SelectionChanged="ModelsComboBox_SelectionChanged" />
                <TextBlock x:Name="SubjectTextBlock" Grid.Column="1" FontSize="20" Text="{Binding Subject}" />
            </Grid>
            <ScrollView Grid.Row="1" x:Name="ChatMessagesScrollView" >
                <ItemsControl x:Name="ChatMessagesControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid  Loaded="ChatMessagesGrid_Loaded">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="{Binding HorizontalAlignment}">
                                    <TextBlock Grid.Row="0" Text="{Binding Role}" Margin="10,0,10,0"  />
                                    <TextBlock Text="{Binding Timestamp}" />
                                    <ProgressRing 
                                        Height="10" 
                                        Width="10" 
                                        Margin="10,0,10,0" 
                                        IsActive="{Binding ProgressRingEnabled}" />
                                </StackPanel>
                                <TextBox Grid.Row="1"
                                    Margin="10" 
                                    Background="{ThemeResource LayerFillColorAltBrush}" 
                                    CornerRadius="10"
                                    Padding="15" 
                                    HorizontalAlignment="{Binding HorizontalAlignment}"
                                    x:Name="ChatBubbleTextBox"
                                    Text="{Binding Content}" 
                                    MaxWidth="600"
                                    IsReadOnly="True" 
                                    TextWrapping="Wrap" 
                                    TextAlignment="Left"
                                    BorderThickness="1" 
                                    BorderBrush="{ThemeResource ControlAltFillColorQuarternaryBrush}"
                                    FontSize="12"
                                    Template="{StaticResource ChatTextBoxControlTemplate}"
                                    TextChanged="ChatBubbleTextBox_TextChanged"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollView>
        </Grid>
        <Grid Height="200" Grid.Row="1" >
            <Grid Margin="20,20,20,20" Background="{ThemeResource LayerFillColorAltBrush}" BorderThickness="2" BorderBrush="{ThemeResource ControlAltFillColorQuarternaryBrush}" MaxWidth="500" MinWidth="100" CornerRadius="20">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <TextBox x:Name="ChatInputTextBox" 
                         Grid.Row="0"
                         Margin="20,10,20,10"
                         TextWrapping="Wrap"
                         TabFocusNavigation="Cycle"
                         PlaceholderText="Enter message..."
                         Background="Transparent"
                         BorderBrush="Transparent"
                         FocusVisualPrimaryBrush="Transparent"
                         FocusVisualSecondaryBrush="Transparent"
                         Template="{StaticResource ChatInputTextBoxControlTemplate}"
                         VerticalAlignment="Stretch" 
                         HorizontalAlignment="Stretch" 
                         ScrollViewer.VerticalScrollMode="Enabled"
                         ScrollViewer.VerticalScrollBarVisibility="Visible"
                         ScrollViewer.IsVerticalRailEnabled="True" />
                <StackPanel Grid.Row="1" Margin="0,0,10,0" Orientation="Horizontal" HorizontalAlignment="Right">
                    <AppBarToggleButton 
                        x:Name="ScrollLockButton" 
                        Width="50" 
                        Height="50"
                        ToolTipService.ToolTip="Scroll Lock"
                        Click="ScrollLockButton_Click">
                        <AppBarToggleButton.KeyboardAccelerators>
                            <KeyboardAccelerator Key="F1" />
                        </AppBarToggleButton.KeyboardAccelerators>
                        <AppBarToggleButton.Icon>
                            <FontIcon Glyph="&#xE72E;" />
                        </AppBarToggleButton.Icon>
                    </AppBarToggleButton>
                    <AppBarButton Icon="Attach" ToolTipService.ToolTip="Attach a file" Width="50" Height="50">
                        <AppBarButton.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control" Key="T" />
                        </AppBarButton.KeyboardAccelerators>
                    </AppBarButton>
                    <AppBarButton 
                        x:Name="SendChatButton"
                        Icon="Send"
                        ToolTipService.ToolTip="Send message/Cancel message"
                        Width="50" 
                        Height="50" 
                        Foreground="{ThemeResource AccentFillColorDefaultBrush}" 
                        Click="SendChatButton_Click"  
                        PointerEntered="SendChatButton_PointerEntered"
                        PointerExited="SendChatButton_PointerExited">
                        <AppBarButton.OpacityTransition>
                            <ScalarTransition Duration="0:0:4" />
                        </AppBarButton.OpacityTransition>
                        <AppBarButton.KeyboardAccelerators>
                            <KeyboardAccelerator Key="Enter" />
                        </AppBarButton.KeyboardAccelerators>
                    </AppBarButton>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
