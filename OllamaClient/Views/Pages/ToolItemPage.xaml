<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="OllamaClient.Views.Pages.ToolItemPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OllamaClient.Views.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource SolidBackgroundFillColorTertiary}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <ScrollViewer Grid.Row="0">
                <Grid MinWidth="800" x:Name="CenterInnerGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock FontSize="24" TextDecorations="Underline" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" Text="{Binding Name}" />
                    <StackPanel Grid.Row="1" HorizontalAlignment="Center">
                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,10,10,10">Description:</TextBlock>
                        <TextBox HorizontalAlignment="Stretch" MaxWidth="200" TextWrapping="Wrap" Template="{StaticResource DefaultInputTextBoxControlTemplate}" />
                        <Grid Grid.Row="1" Margin="10" >
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock 
                                Grid.Row="0" 
                                Margin="10"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" 
                                Text="Select a javascript file that contains the function(s) you want the model to use" />
                             <Button 
                                x:Name="PickAFileButton" 
                                Grid.Row="1" 
                                HorizontalAlignment="Center"
                                Click="PickAFileButton_Click">
                                <TextBlock>Select File</TextBlock>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
