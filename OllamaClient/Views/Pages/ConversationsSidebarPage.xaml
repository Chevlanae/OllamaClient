<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="OllamaClient.Views.Pages.ConversationsSidebarPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OllamaClient.Views.Pages"
    xmlns:hp="using:OllamaClient.Helpers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    NavigationCacheMode="Required">

    <Grid>
        <ListView x:Name="ConversationsListView" SelectionChanged="ConversationsListView_SelectionChanged" SelectionMode="Single">
            <ListView.Resources>
                <hp:ChatItemSubjectConverter x:Key="ChatItemSubjectConverter" />
            </ListView.Resources>
            <ListView.Header>
                <Grid Height="50">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="80" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" VerticalAlignment="Center" Margin="30,0,0,0" FontSize="20">
                        <Bold>
                            <Underline>
                                Conversations
                            </Underline>
                        </Bold>
                    </TextBlock>
                    <Button Grid.Column="1" Margin="10,5,0,0" Height="50" Width="50" Background="Transparent" BorderBrush="Transparent" Click="AddConversationButton_Click">
                        <FontIcon Glyph="&#xE710;" />
                    </Button>
                </Grid>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="50" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding Subject, Converter={StaticResource ChatItemSubjectConverter}}" Grid.Column="0" VerticalAlignment="Center"/>
                        <AppBarButton Icon="Delete" Grid.Column="1" Height="50" Width="50" Click="DeleteConversationButton_Click" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
